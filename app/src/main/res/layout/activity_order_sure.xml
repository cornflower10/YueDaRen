<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qingmang.serviceIntroduce.OrderSureActivity">
<LinearLayout
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <include layout="@layout/toolbar"/>
    <View
        style="@style/divide_line_match"/>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_location"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="false"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/icon_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:clickable="false"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_user"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_333333"
                android:text="lianxiren:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_333333"
                    android:text="15856193725"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_address_top"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_333333"
                android:text="联系地址:卡号疯狂卡夫卡发挥空间錒回复卡号发开发哈哈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:clickable="false"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/icon_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:src="@drawable/order_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_333333"
                android:text="服务名称："
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv_title"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_999999"
                android:text="服务对象："
                android:id="@+id/tv_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv_context"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_999999"
                android:text="服务项目："
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="@dimen/margin_16">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_service_ob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_fa_piao"
            android:text="不开发票"
            android:padding="4dp"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:drawableRight="@drawable/icon_more"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <View
        style="@style/divide_line_match"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_16">

        <TextView
            android:id="@+id/tv_liuyan"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给买家留言："
            android:textColor="@color/text_333333"
            android:textSize="@dimen/sp_18" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_toRightOf="@+id/tv_liuyan"
            android:background="@color/white"
            android:text="选择对本次交易说明"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:textColor="@color/text_888888"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <View
        style="@style/divide_line_match"/>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/order_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/sp_14"
            android:text="fdsjkfhjdshfjhfshfhjd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:id="@+id/bt_add_address"
            android:text="+   新建地址"
            android:background="@color/red_ff2a31"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_below="@+id/cb_agreement"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
</LinearLayout>
