<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg_color"
    tools:context="com.qingmang.user.RegisterActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <include layout="@layout/toolbar"/>
    <View
        style="@style/divide_line_match"/>
    <android.support.v7.widget.AppCompatEditText
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_333333"
        android:id="@+id/et_name"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:hint="请输入用户名"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <View
        style="@style/divide_line_match"/>
    <android.support.v7.widget.AppCompatEditText
        android:maxLength="11"
        android:inputType="phone"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_333333"
        android:id="@+id/et_phone"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:hint="请输入手机号码"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <View
        style="@style/divide_line_match"/>
    <android.support.v7.widget.AppCompatEditText
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_333333"
        android:id="@+id/et_passwd"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:hint="输入6-16位数字密码，字母或常用符号"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <View
        style="@style/divide_line_match"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatEditText
        android:inputType="number"
        android:background="@color/white"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_333333"
        android:id="@+id/et_val"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:hint="验证码"
        android:gravity="center_vertical"
        android:layout_width="200dp"
        android:layout_height="48dp" />
            <com.qingmang.custom.CheckCodeCountDown
                android:background="@drawable/coner_gray_full"
                android:textSize="@dimen/sp_16"
                android:id="@+id/cd_val"
                android:gravity="center"
                android:text="获取验证码"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="36dp" />
        </RelativeLayout>
    <View
        style="@style/divide_line_match"/>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_agreement"
            android:drawablePadding="8dp"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:text="同意注册条款"
            android:textColor="@color/text_999999"
            android:button="@null"
            android:drawableLeft="@drawable/icon_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_register"
            android:text="立即注册"
            android:background="@color/red_ff2a31"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_below="@+id/cb_agreement"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_width="280dp"
            android:layout_height="48dp" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
