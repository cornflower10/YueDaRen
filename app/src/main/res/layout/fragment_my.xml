<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/page_bg_color"
             android:orientation="vertical">

<FrameLayout
    android:background="@drawable/my_bg"
    android:layout_width="match_parent"
    android:layout_height="200dp">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
  <TextView
      android:layout_marginBottom="10dp"
      android:layout_above="@+id/iv_header"
      android:id="@+id/tv_name"
      android:layout_marginTop="20dp"
      android:textColor="@color/text_333333"
      android:textSize="@dimen/sp_18"
      android:layout_centerInParent="true"
      android:text=""
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <ImageView
      android:id="@+id/iv_setting"
      android:padding="5dp"
      android:src="@drawable/icon_my_set"
      android:layout_marginRight="@dimen/margin_16"
      android:layout_marginTop="20dp"
      android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <ImageView
      android:src="@drawable/my_portrait"
      android:layout_centerInParent="true"
      android:id="@+id/iv_header"
      android:layout_width="60dp"
      android:layout_height="60dp" />

 </RelativeLayout>

</FrameLayout>

 <LinearLayout
     android:background="@color/white"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <RelativeLayout
      android:id="@+id/rl_amount"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content">
   <TextView
       android:id="@+id/tv_amount"
       android:layout_marginTop="@dimen/margin_16"
       android:textColor="@color/red_ff2a31"
       android:textSize="@dimen/sp_18"
       android:layout_centerHorizontal="true"
       android:text=""
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <TextView
       android:layout_marginBottom="@dimen/margin_16"
       android:layout_marginTop="5dp"
       android:layout_below="@+id/tv_amount"
       android:textColor="@color/text_333333"
       android:textSize="@dimen/sp_14"
       android:layout_centerHorizontal="true"
       android:text="积分"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
  </RelativeLayout>
  <View
      android:layout_gravity="center_vertical"
      android:background="@color/divide_line"
      android:layout_height="40dp"
     android:layout_width="1dp"/>
  <RelativeLayout
      android:id="@+id/rl_yhj"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content">
   <TextView
       android:id="@+id/tv_yhj"
       android:layout_marginTop="@dimen/margin_16"
       android:textColor="@color/red_ff2a31"
       android:textSize="@dimen/sp_18"
       android:layout_centerHorizontal="true"
       android:text=""
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <TextView
       android:layout_marginBottom="@dimen/margin_16"
       android:layout_marginTop="5dp"
       android:layout_below="@+id/tv_yhj"
       android:textColor="@color/text_333333"
       android:textSize="@dimen/sp_14"
       android:layout_centerHorizontal="true"
       android:text="优惠券"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
  </RelativeLayout>
  <View
      android:layout_gravity="center_vertical"
      android:background="@color/divide_line"
      android:layout_height="40dp"
      android:layout_width="1dp"/>
  <RelativeLayout
      android:id="@+id/rl_dzf"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content">
   <TextView
       android:id="@+id/tv_dzf"
       android:layout_marginTop="@dimen/margin_16"
       android:textColor="@color/red_ff2a31"
       android:textSize="@dimen/sp_18"
       android:layout_centerHorizontal="true"
       android:text=""
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <TextView
       android:layout_marginBottom="@dimen/margin_16"
       android:layout_marginTop="5dp"
       android:layout_below="@+id/tv_dzf"
       android:textColor="@color/text_333333"
       android:textSize="@dimen/sp_14"
       android:layout_centerHorizontal="true"
       android:text="待支付"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
  </RelativeLayout>
 </LinearLayout>
 <RelativeLayout
     android:id="@+id/ll_rzqy"
     android:layout_marginTop="10dp"
     android:background="@color/white"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <TextView
      android:layout_centerVertical="true"
      android:text="认证企业客户"
      android:drawablePadding="@dimen/margin_16"
      android:drawableLeft="@drawable/icon_my_rzqy"
      android:layout_margin="@dimen/margin_16"
      android:textSize="@dimen/sp_16"
      android:textColor="@color/text_333333"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <ImageView
      android:layout_marginRight="@dimen/margin_16"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:src="@drawable/icon_more"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
 </RelativeLayout>
 <RelativeLayout
     android:background="@color/white"
     android:layout_marginTop="10dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <View
      android:id="@+id/v"
     style="@style/divide_line_match"/>
  <android.support.v7.widget.RecyclerView
      android:layout_below="@+id/v"
      android:id="@+id/rv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  </android.support.v7.widget.RecyclerView>
 </RelativeLayout>

</LinearLayout>