<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qingmang.user.SettingActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <include layout="@layout/toolbar"/>
    <View style="@style/divide_line_match"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_16">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/text_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:src="@drawable/icon_my"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
           />
    </RelativeLayout>
            <View style="@style/divide_line_match"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_16">

                <TextView
                    android:textColor="@color/text_333333"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:id="@+id/et_user_name"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View style="@style/divide_line_match"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_16">

                <TextView
                    android:textColor="@color/text_333333"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textSize="@dimen/sp_14" />

                <android.support.v7.widget.AppCompatEditText
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View style="@style/divide_line_match"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="@dimen/margin_16">

                <TextView
                    android:textColor="@color/text_333333"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="常用地址"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:drawablePadding="4dp"
                    android:text="设置"
                    android:drawableRight="@drawable/icon_more"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="right|center_vertical"
                    android:id="@+id/tv_always_address"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View style="@style/divide_line_match"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_16">

                <TextView
                    android:textColor="@color/text_333333"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="所在地址"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/icon_more"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="right|center_vertical"
                    android:id="@+id/tv_place"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View style="@style/divide_line_match"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_16">

                <TextView
                    android:textColor="@color/text_333333"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="详细地址"
                    android:textSize="@dimen/sp_14" />

                <android.support.v7.widget.AppCompatEditText
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:id="@+id/tv_place_detail"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View style="@style/divide_line_match"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_16">

                <TextView
                    android:textColor="@color/text_333333"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View style="@style/divide_line_match"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="@dimen/margin_16">

                <TextView
                    android:textColor="@color/text_333333"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/icon_more"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="right|center_vertical"
                    android:id="@+id/tv_update_passwd"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View style="@style/divide_line_match"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="@dimen/margin_16">

                <TextView
                    android:textColor="@color/text_333333"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="安全认证"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <View style="@style/divide_line_match"/>
            <android.support.v7.widget.AppCompatEditText
                android:paddingRight="@dimen/margin_16"
                android:paddingLeft="@dimen/margin_16"
                android:background="@color/white"
                android:id="@+id/et_real_name"
                android:hint="请输入真实姓名"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
            <View style="@style/divide_line_match"/>
            <android.support.v7.widget.AppCompatEditText
                android:paddingRight="@dimen/margin_16"
                android:paddingLeft="@dimen/margin_16"
                android:background="@color/white"
                android:id="@+id/et_email"
                android:hint="请输入安全邮箱"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
            <View style="@style/divide_line_match"/>
            <android.support.v7.widget.AppCompatEditText
                android:paddingRight="@dimen/margin_16"
                android:paddingLeft="@dimen/margin_16"
                android:background="@color/white"
                android:id="@+id/et_id_card"
                android:hint="请输入有效身份证"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
            <View style="@style/divide_line_match"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:id="@+id/bt_commit"
            android:text="提交修改"
            android:background="@color/red_ff2a31"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </FrameLayout>
</LinearLayout>
