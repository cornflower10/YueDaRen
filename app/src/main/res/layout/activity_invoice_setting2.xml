<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg_color"
    tools:context="com.qingmang.serviceIntroduce.InvoiceSettingActivity">
<include layout="@layout/toolbar"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_type"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/sp_14"
            android:text="发票类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/tv_ele"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:layout_below="@+id/tv_type"
            android:background="@drawable/coner_orange_2"
            android:text="电子发票"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_toRightOf="@+id/tv_ele"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:layout_below="@+id/tv_type"
            android:background="@drawable/coner_gray_2"
            android:text="增值税发票"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tai_tou"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/sp_14"
            android:text="发票抬头"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
