<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">
    <com.yyydjk.library.BannerLayout
        android:layout_marginTop="6dp"
        android:id="@+id/iv"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:autoPlayDuration="4000"
        app:defaultImage="@drawable/people_banner"
        app:indicatorMargin="10dp"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="3dp"
        app:scrollDuration="1100"
        app:selectedIndicatorColor="#fc5353"
        app:selectedIndicatorHeight="6dp"
        app:selectedIndicatorWidth="6dp"
        app:unSelectedIndicatorColor="@color/white"
        app:unSelectedIndicatorHeight="6dp"
        app:unSelectedIndicatorWidth="6dp" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:layout_marginRight="@dimen/margin_16"
            android:background="@color/divide_line"
            android:layout_height="1dp"
            android:layout_width="60dp"/>
        <TextView
            android:text="民生重点服务推荐"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="@dimen/margin_16"
            android:background="@color/divide_line"
            android:layout_height="1dp"
            android:layout_width="60dp"/>
    </LinearLayout>
</LinearLayout>