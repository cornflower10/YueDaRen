<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/white"
             android:orientation="vertical"
           >
<View
    android:background="@color/page_bg_color"
    android:layout_width="match_parent"
    android:layout_height="10dp"/>
<RelativeLayout
    android:layout_marginTop="@dimen/margin_16"
    android:layout_marginRight="@dimen/margin_16"
    android:layout_marginLeft="@dimen/margin_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <TextView
       android:textSize="@dimen/sp_14"
       android:textColor="@color/text_999999"
       android:id="@+id/tv_no"
       android:text="IOS547438539"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_alignParentRight="true"
       android:textSize="@dimen/sp_14"
       android:textColor="@color/text_999999"
       android:id="@+id/tv_time"
       android:text="2018-03-20 20:12"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
</RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_333333"
            android:id="@+id/tv_context"
            android:text="人才引进"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:id="@+id/tv_status"
            android:text="等待确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ture"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_666666"
            android:text="确认价格："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tv_ture"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/red_ff2a31"
            android:text="2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/divide_line_match"/>
    <RelativeLayout
        android:layout_margin="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_tip"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_426996"
            android:text="客户配合提醒："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_tip_context"
            android:layout_toRightOf="@+id/tv_tip"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_cancle"
            android:background="@drawable/coner_gray"
            android:layout_toLeftOf="@+id/tv_pay"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/red_ff2a31"
            android:id="@+id/tv_pay"
            android:background="@drawable/coner_red"
            android:layout_alignParentRight="true"
            android:text="等待支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/green_58c04e"
            android:id="@+id/tv_wait"
            android:background="@drawable/coner_green"
            android:layout_alignParentRight="true"
            android:text="等待客户提供资料"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>